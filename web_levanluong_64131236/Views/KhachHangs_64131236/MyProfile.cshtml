@model web_levanluong_64131236.Models.KhachHang

@{
    ViewBag.Title = "MyProfile";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}



<div class="container mt-4">
    <h2>Thông tin cá nhân của tôi</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Mã khách hàng:</dt>
                <dd class="col-sm-9">@Model.MaKH</dd>

                <dt class="col-sm-3">Họ tên:</dt>
                <dd class="col-sm-9">@Model.TenKH</dd>

                <dt class="col-sm-3">Địa chỉ:</dt>
                <dd class="col-sm-9">@Model.DiaChi</dd>

                <dt class="col-sm-3">Email:</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Số điện thoại:</dt>
                <dd class="col-sm-9">@Model.SDT_KH</dd>

                <dt class="col-sm-3">Tên đăng nhập:</dt>
                <dd class="col-sm-9">@Model.username</dd>
            </dl>

            <div class="mt-3">
                @Html.ActionLink("Chỉnh sửa thông tin", "EditMyProfile", null, new { @class = "btn btn-primary" })
                @Html.ActionLink("Đổi mật khẩu", "ChangePassword", "QuanTris_64131236", null, new { @class = "btn btn-secondary" })
                @Html.ActionLink("Quay lại", "Categories", "LoaiHangs_64131236", null, new { @class = "btn btn-outline-primary" })
            </div>
        </div>
    </div>
</div>
